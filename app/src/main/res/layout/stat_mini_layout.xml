<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/stat_icon_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_dialog_alert"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/stat_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/stat_icon_image"
        android:gravity="center"
        android:lines="1"
        android:text="Stat" />

    <TextView
        android:id="@+id/stat_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_name_text"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/stat_icon_image"
        android:lines="1"
        android:text="00.0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_name_text"
        android:layout_toEndOf="@+id/stat_value_text"
        android:lines="1"
        android:text="units"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="italic" />
</RelativeLayout>
